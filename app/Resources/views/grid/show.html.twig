{% extends '::layout.html.twig' %}

{% block body %}
    <h1>Grid</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grid.id }}</td>
            </tr>
            <tr>
                <th>Week</th>
                <td>{{ grid.week }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if grid.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('grid_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('grid_edit', { 'id': grid.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
