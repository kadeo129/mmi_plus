{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>MMI +</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('assets/css/css_general.css')  }}">
    <link rel="stylesheet" href="{{ asset('assets/css/css_co.css')  }}">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
</head>

<body>

<div class="container">
    <div class="col-xs-5 oblikd" id="connexion">
        <img src="{{ asset('assets/css/logo.png')  }}" alt="mmi+" width="270">

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div id="formulaire">
            <form method="post" class="oblikd form-horizontal" action="{{ path("fos_user_security_check") }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <label class="col-xs-4" for="username">Identifiant</label>
                    <div class="col-sm-8">
                        <input id="username" name="_username" placeholder="Identifiant" class="oblikd" value="{{ last_username }}" required="required" />
                    </div>
                </div><br>
                <div class="form-group">
                    <label for="password" class="col-sm-5">Mot de passe</label>
                    <div class="col-sm-7">
                        <input type="password" class="oblikd" placeholder="Mot de passe" id="password" name="_password" required="required" />
                    </div>
                </div><br>
                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me" class="col-sm-5">Se rappeler de moi</label>
                </div><br>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="oblikd btn" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"><h1>CONNEXION</h1></button>
                    </div>
                </div>

                <p>* ce sont les mÃªmes identifiants que pour l' intranet</p>

            </form>
        </div>
    </div>
</div>

</body>

</html>