{% extends '::layout.html.twig' %}

{% block body %}
    <h1>Category list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert alert-danger">
                <strong>Erreur</strong> : {{ message }}
            </div>
        {% endfor %}
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('mmitv_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mmitv_category_show', { 'id': category.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mmitv_category_edit', { 'id': category.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mmitv_category_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
